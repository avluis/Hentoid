<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/toolbar_layout_elevation"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/Base.Theme.AppCompat.CompactMenu"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:id="@+id/downloads_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/btn_content_selector"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_previous_item"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btnPage"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:clickable="false"
            android:textIsSelectable="false"
            tools:text="1" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/btn_content_selector"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_next_item"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/btn_content_selector"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_refresh"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/downloads_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_red_100"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:background="@color/white">

        <TextView
            android:id="@+id/downloads_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/title_activity_downloads"
            tools:background="@color/transparent" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>