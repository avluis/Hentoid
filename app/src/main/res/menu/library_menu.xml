<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LibraryActivity"
    tools:ignore="AlwaysShowAction"
    tools:targetApi="o">
    <item
        android:id="@+id/action_search"
        android:icon="@drawable/ic_menu_search"
        android:title="@string/menu_search"
        android:tooltipText="@string/menu_search"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="collapseActionView|always" />
    <!-- Specific to groups -->
    <item
        android:id="@+id/action_group_new"
        android:icon="@drawable/ic_new"
        android:title="@string/menu_group_new"
        android:tooltipText="@string/menu_group_new"
        android:visible="false"
        app:showAsAction="always" />
    <item
        android:id="@+id/action_completed_filter"
        android:checkable="true"
        android:checked="false"
        android:icon="@drawable/ic_completed_filter_off"
        android:title="@string/menu_comp"
        android:tooltipText="@string/menu_comp"
        app:showAsAction="always" />
    <item
        android:id="@+id/action_favourites"
        android:checkable="true"
        android:checked="false"
        android:icon="@drawable/ic_filter_favs_off"
        android:title="@string/menu_fav"
        android:tooltipText="@string/menu_fav"
        app:showAsAction="always" />
    <item
        android:id="@+id/action_edit"
        android:icon="@drawable/ic_reorder_lines"
        android:title="@string/menu_edit_order"
        android:tooltipText="@string/menu_edit_order"
        app:showAsAction="always" />
    <item
        android:id="@+id/action_edit_cancel"
        android:icon="@drawable/ic_close"
        android:title="@string/menu_edit_cancel"
        android:tooltipText="@string/menu_edit_cancel"
        android:visible="false"
        app:showAsAction="always" />
    <item
        android:id="@+id/action_order"
        android:icon="@drawable/ic_sort"
        android:title="@string/menu_order"
        android:tooltipText="@string/menu_order"
        app:showAsAction="always" />
</menu>
