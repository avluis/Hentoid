<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <!-- Activities with Toolbar as ActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <!-- AppIntro Activity & Slides -->
    <style name="AppTheme.AppIntro" parent="AppTheme.DarkBackground">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <!-- Splash Activity -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Import Activity -->
    <style name="ImportTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Import Dialog -->
    <style name="ImportDialogTheme" parent="ImportTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Browser Activity -->
    <style name="BrowserTheme" parent="ImportTheme">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Backgrounds -->
    <style name="AppTheme.TaupeBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/taupe</item>
    </style>

    <style name="AppTheme.TaupeBackgroundNoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/taupe</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.DarkBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

    <style name="AppTheme.DarkBackgroundNoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Downloads -->
    <style name="AppTheme.Downloads" parent="AppTheme.TaupeBackgroundNoActionBar">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <!-- Mikan -->
    <style name="AppTheme.Mikan" parent="AppTheme.DarkBackground">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="AppTheme.DarkBackground">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorPrimary">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <!-- Search Activity -->
    <style name="AppTheme.Search" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/taupe</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/taupe</item>
    </style>

    <style name="LargeItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="Chip">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_chip</item>
    </style>

    <style name="Chip.Input">
        <item name="android:drawableEnd">@drawable/ic_cancel</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>
